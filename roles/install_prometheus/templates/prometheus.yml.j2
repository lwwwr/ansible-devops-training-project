  alertmanagers:
{% for h in groups['tag_Name_alavruschik_prometheus_grafana_alertmanager'] %}
  - scheme: http
    static_configs:
    - targets: 
      - '{{ hostvars[h].ansible_host }}:9093'
{% endfor %}

